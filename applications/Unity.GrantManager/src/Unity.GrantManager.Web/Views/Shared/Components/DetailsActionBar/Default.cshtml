
@using Microsoft.AspNetCore.Authorization;
@using Unity.GrantManager.Localization;
@using Microsoft.Extensions.Localization;
@using Unity.GrantManager.Permissions;

@inject IStringLocalizer<GrantManagerResource> L
@inject IAuthorizationService AuthorizationService

<div class="action-bar active p-2">
    <div class="d-flex align-items-start justify-content-start gap-2"> 
        @if (await AuthorizationService.IsGrantedAsync(GrantApplicationPermissions.Approvals.Complete))
        {
            <abp-button id="approveApplicationsDetails"
                        text="@L["ApplicationList:ApprovedButton"].Value"
                        icon-type="Other"
                        icon="fl fl-like"
                        button-type="Light" />
            <abp-button id="dontApproveApplicationsDetails"
                        text="@L["ApplicationList:NotApprovedButton"].Value"
                        icon-type="Other"
                        icon="fl fl-dislike"
                        button-type="Light" />
        }
        @if (await AuthorizationService.IsGrantedAsync(GrantApplicationPermissions.Assessments.Start))
        {
            <abp-button id="startAssessment"
                        text="@L["ApplicationList:StartAssessmentButton"].Value"
                        icon-type="Other"
                        icon="fl fl-startpoint"
                        button-type="Light" />
        }
        @if (await AuthorizationService.IsGrantedAsync(GrantApplicationPermissions.Assessments.Complete))
        {
            <abp-button id="completeAssessment"
                        text="@L["ApplicationList:CompleteAssessmentButton"].Value"
                        icon-type="Other"
                        icon="fl fl-endpoint"
                        button-type="Light" />
        }

        <abp-button id="addReview"
                    text="@L["ApplicationList:AddReviewButton"].Value"
                    icon-type="Other"
                    icon="fl fl-review"
                    button-type="Light" />
        <abp-button text="@L["ApplicationList:CopyLinkButton"].Value"
                    disabled="true"
                    icon-type="Other"
                    icon="fl fl-link"
                    button-type="Light" />

        <abp-button text="@L["ApplicationList:DownloadButton"].Value"
                    disabled="true"
                    icon-type="Other"
                    icon="fl fl-download"
                    button-type="Light" />
    </div>
    
</div>