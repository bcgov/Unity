                                    <label class="d-flex align-items-center w-100 mb-0">
                                        <input type="radio" name="merge_OrgNumber" value="new" class="me-2" />
                                        <span id="new_OrgNumber"></span>
                                    </label>
                                </td>
                            </tr>
                            <tr>
                                <td>@L["ApplicantInfoView:ApplicantInfo.NonRegOrgName"].Value</td>
