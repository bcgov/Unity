                                <td>
                                    <label class="d-flex align-items-center w-100 mb-0">
                                        <input type="radio" name="merge_UnityApplicantId" value="new" class="me-2" />
                                        <span id="new_UnityApplicantId"></span>
                                    </label>
                                </td>
                            </tr>
                            <tr>
                                <td>@L["ApplicantInfoView:ApplicantInfo.ApplicantName"].Value</td>
                                <td>
                                    <label class="d-flex align-items-center w-100 mb-0">
                                        <input type="radio" name="merge_ApplicantName" value="existing" class="me-2" />
                                        <span id="existing_ApplicantName"></span>
                                    </label>
                                </td>
                                <td>
                                    <label class="d-flex align-items-center w-100 mb-0">
                                        <input type="radio" name="merge_ApplicantName" value="new" class="me-2" />
                                        <span id="new_ApplicantName"></span>
                                    </label>
                                </td>
                            </tr>
                            <tr>
                                <td>@L["ApplicantInfoView:ApplicantInfo.OrgName"].Value</td>
