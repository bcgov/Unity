@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.Localization;
@using Unity.Flex.Web.Views.Shared.Components.WorksheetInstanceWidget
@using Unity.GrantManager.Flex
@using Unity.GrantManager.Localization;
@using Unity.GrantManager.Payments;
@using Unity.GrantManager.Permissions
@using Unity.GrantManager.Web.Views.Shared.Components.ApplicantInfo;
@using Unity.Modules.Shared
@using Unity.Modules.Shared.Correlation
@using Volo.Abp.Authorization.Permissions
@using Volo.Abp.Features;

@inject IAuthorizationService AuthorizationService
@inject IFeatureChecker FeatureChecker
@inject IPermissionChecker PermissionChecker
@inject IStringLocalizer<GrantManagerResource> L

@model ApplicantInfoViewModel
@{
    Layout = null;
    bool IsViewEditable = await PermissionChecker.IsGrantedAsync(GrantApplicationPermissions.ApplicantInfo.Update);
    string IsFieldsetDisabled = await PermissionChecker.HasDisabledAttributeAsync(GrantApplicationPermissions.ApplicantInfo.Update);
}

<input type="hidden" id="ApplicantInfoViewApplicationId" value="@Model.ApplicationId" />
<div id="orgApplicationSectorList" style="display: none;">@Html.Raw(Json.Serialize(Model.ApplicationSectors))</div>

<abp-row class="px-1 pb-2 mb-4 project-info-container">
    <div class="save-button-container">
        <abp-button text="Save" id="saveApplicantInfoBtn" class="floating-save-btn" icon-type="Other" icon="fl fl-save"
            button-type="Primary" disabled="true" abp-if="@IsViewEditable" />
    </div>

    <form id="ApplicantInfoForm">
        <abp-input type="hidden" id="ApplicantInfoViewApplicantId" asp-for="@Model.ApplicantId" />

        @* Zone Section : Applicant Info Summary *@
        <zone-fieldset id="@UnitySelector.Applicant.Summary.Default" form-id="@Model.ApplicationFormId" show-legend="true"
            update-permission-requirement="@UnitySelector.Applicant.Summary.Update">
            <abp-row class="m-0 project-info-form">
                <abp-row class="m-0 p-0">
                    <abp-column size="_12" class="px-1 mb-4">
                        <label class="form-label">@L["ApplicantInfoView:ApplicantInfo.OrgBookSearch"].Value</label>
                        <select asp-for="@Model.SelectedOrgBookId"
                                class="auto-complete-select"
                                data-autocomplete-minimum-input-length="3"
                                data-autocomplete-api-url="/api/app/org-book/org-book-autocomplete-query"
                                data-autocomplete-display-property="value"
                                data-autocomplete-value-property="topic_source_id"
                                data-autocomplete-items-property="results"
                                data-autocomplete-filter-param-name="orgBookQuery"
                                data-autocomplete-placeholder="@L["ApplicantInfoView:ApplicantInfo.OrgBookSearchPlaceholder"].Value"
                                data-autocomplete-allow-clear="true">
                        </select>
                    </abp-column>
                   
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ApplicantSummary.OrgName" disabled/>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ApplicantSummary.OrgNumber" disabled />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.OrgStatus" asp-items="@Model.OrgBookStatusListOptions"
                                    id="orgBookStatusDropdown" disabled>
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.OrganizationType" asp-items="@Model.OrganizationTypeListOptions"
                                    id="orgTypeDropdown" disabled>
                            <option value="">Please choose...</option>
                        </abp-select> 
                    </abp-column>
                    </abp-row>
                    <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ApplicantSummary.NonRegOrgName" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input class="numeric-mask" asp-for="@Model.ApplicantSummary.OrganizationSize" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <div class="switch-container">
                            <div class="form-check unt-form-switch form-switch">
                                <input type="hidden" name="ApplicantSummary.IndigenousOrgInd" value="No" />

                                <!-- Checkbox submits "Yes" when checked -->
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="ApplicantSummary.IndigenousOrgInd"
                                       id="indigenousOrgInd"
                                       value="Yes"
                                @(Model.ApplicantSummary.IndigenousOrgInd == "Yes" ? "checked" : string.Empty) />
                                <label class="form-check-label" for="indigenousOrgInd">@L["ApplicantInfoView:ApplicantInfo.IndigenousOrgInd"].Value</label>
                            </div>
                        </div>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <div class="input-group unt-input-group">
                            <abp-input asp-for="@Model.ApplicantSummary.UnityApplicantId" maxlength="6" class="unt-input" id="applicantInfoUnityApplicantId" />
                            <div class="unt-input-group-append">
                                <button class="btn unt-btn-outline-primary btn-outline-primary" id="btn-generate" type="button" onclick="generateUnityApplicantIdBtn()"><i class="unt-icon-sm fa-solid fa-shuffle"></i></button>
                            </div>
                        </div>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.FiscalDay" asp-items="@Model.FiscalDayListOptions">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.FiscalMonth" asp-items="@Model.FiscalMonthListOptions">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.Sector" asp-items="@Model.ApplicationSectorsList"
                                    id="orgSectorDropdown">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.SubSector" asp-items="@Model.ApplicationSubSectorsList"
                                    id="orgSubSectorDropdown" >
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <div class="switch-container">
                            <div class="form-check unt-form-switch form-switch">
                                <input class="form-check-input" checked="@Model.ApplicantSummary.RedStop" type="checkbox" role="switch" id="redStop" disabled>
                                <label class="form-check-label" for="redStop">@L["ApplicantInfoView:ApplicantInfo.RedStop"].Value</label>
                            </div>
                        </div>
                    </abp-column>
                    <abp-row class="m-0 p-0">
                        <abp-column size="_12" class="px-1">
                            <abp-input asp-for="@Model.ApplicantSummary.SectorSubSectorIndustryDesc" />
                        </abp-column>
                    </abp-row>
                </abp-row>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Supplier *@
        <zone id="@UnitySelector.Applicant.Supplier.Default" form-id="@Model.ApplicationFormId" show-legend="true"
            feature-requirement="@PaymentConsts.UnityPaymentsFeature">
            <div id="supplier-info-widget">
                @await Component.InvokeAsync("SupplierInfo", new { applicantId = Model.ApplicantId })
            </div>
        </zone>

        @* Zone Section : Contact Info *@
        <zone-fieldset id="@UnitySelector.Applicant.Contact.Default" form-id="@Model.ApplicationFormId" show-legend="true"
            update-permission-requirement="@UnitySelector.Applicant.Contact.Update">
            <abp-row class="m-0 project-info-location">
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Name" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Title" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Email" />
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Phone"
                                   pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Phone2"
                                   pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" />
                    </abp-column>
                </abp-row>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Signing Authority *@
        <zone-fieldset id="@UnitySelector.Applicant.Authority.Default" form-id="@Model.ApplicationFormId" show-legend="true"
            update-permission-requirement="@UnitySelector.Applicant.Authority.Update">
            <abp-row class="m-0 signin-authority-form">
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityFullName" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityTitle" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityEmail" />
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityBusinessPhone"
                                   pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityCellPhone"
                                   pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" />
                    </abp-column>
                </abp-row>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Address *@
        <zone-fieldset id="@UnitySelector.Applicant.Location.Default" form-id="@Model.ApplicationFormId" show-legend="true"
            update-permission-requirement="@UnitySelector.Applicant.Location.Update">
            <abp-row class="m-0 contact-info-form">
                <div class="d-flex">
                    <abp-row class="m-0 physical-address-form pe-2">
                        <abp-row class="m-0 p-0">
                            <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 ps-0 mt-3">
                                <div class="d-flex align-items-stretch justify-content-start">
                                    <h6 class="ps-1 fw-bold">@L["ApplicantInfoView:PhysicalAddress"].Value</h6>
                                </div>
                            </abp-column>
                        </abp-row>
                        <abp-row class="m-0 p-0">
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Street" />
                            </abp-column>
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Street2" />
                            </abp-column>
                            <abp-column size="_2" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Unit" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.City" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Province" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.PostalCode" />
                            </abp-column>
                        </abp-row>
                    </abp-row>
                    <abp-row class="m-0 mailing-address-form ps-2">
                        <abp-row class="m-0 p-0">
                            <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 ps-0 mt-3">
                                <div class="d-flex align-items-stretch justify-content-start">
                                    <h6 class="ps-1 fw-bold">@L["ApplicantInfoView:MailingAddress"].Value</h6>
                                </div>
                            </abp-column>
                        </abp-row>
                        <abp-row class="m-0 p-0">
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Street" />
                            </abp-column>
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Street2" />
                            </abp-column>
                            <abp-column size="_2" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Unit" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.City" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Province" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.PostalCode" />
                            </abp-column>
                        </abp-row>
                    </abp-row>
                </div>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Worksheet *@
        <zone id="@UnitySelector.Applicant.Default" feature-requirement="Unity.Flex" form-id="@Model.ApplicationFormId" show-legend="false">
            @await Component.InvokeAsync(typeof(WorksheetInstanceWidget),
                new
                {
                    instanceCorrelationId = Model.ApplicationId,
                    instanceCorrelationProvider = CorrelationConsts.Application,
                    sheetCorrelationId = Model.ApplicationFormVersionId,
                    sheetCorrelationProvider = CorrelationConsts.FormVersion,
                    uiAnchor = FlexConsts.ApplicantInfoUiAnchor
                })
        </zone>
    </form>
</abp-row>

<zone id="@(UnitySelector.Applicant.Contact.Default + "_Additional")"
    zone-requirement="@UnitySelector.Applicant.Contact.Default"
    permission-requirement="@UnitySelector.Applicant.Contact.Default"
    update-permission-requirement="@UnitySelector.Applicant.Contact.Update"
    form-id="@Model.ApplicationFormId" show-legend="false">
<abp-row class="px-1 pb-2 mb-4 summary-container">
    <h6 class="ps-2 mb-3 fw-bold">@L["Summary:ContactsTitle"].Value</h6>
    <div id="applicationContactsWidget">
        @await Component.InvokeAsync("ApplicationContactsWidget", new { applicationId = Model.ApplicationId, isReadOnly = !IsViewEditable })
    </div>

    @if (IsViewEditable)
    {
        <div class="d-flex justify-content-end">
            <abp-button text="Add Contact" id="AddContactButton" class="add_contact_btn" icon-type="Other" icon="fl fl-plus"
                        button-type="Light" abp-if="@(await PermissionChecker.IsGrantedAsync(UnitySelector.Applicant.Contact.Create))" />
        </div>
    }
</abp-row>
</zone>
<script defer>
    (function () {
        if (window.jQuery) {
            $('.unity-currency-input').maskMoney();
        }
    })();
</script>
