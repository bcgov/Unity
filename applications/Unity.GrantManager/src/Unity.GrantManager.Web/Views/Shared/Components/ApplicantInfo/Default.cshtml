@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.Localization;
@using Unity.Flex.Web.Views.Shared.Components.WorksheetInstanceWidget
@using Unity.GrantManager.Flex
@using Unity.GrantManager.Localization;
@using Unity.GrantManager.Payments;
@using Unity.GrantManager.Permissions
@using Unity.GrantManager.Web.Views.Shared.Components.ApplicantInfo;
@using Unity.Modules.Shared
@using Unity.Modules.Shared.Correlation
@using Volo.Abp.Authorization.Permissions
@using Volo.Abp.Features;

@inject IAuthorizationService AuthorizationService
@inject IFeatureChecker FeatureChecker
@inject IPermissionChecker PermissionChecker
@inject IStringLocalizer<GrantManagerResource> L

@model ApplicantInfoViewModel
@{

    Layout = null;
    bool IsViewEditable = await PermissionChecker.IsGrantedAsync(UnitySelector.Applicant.UpdatePolicy);
    bool IsAdditionalContactAddable = await PermissionChecker.IsGrantedAsync(UnitySelector.Applicant.AdditionalContact.Create);
    bool IsAdditionalContactEditable = await PermissionChecker.IsGrantedAsync(UnitySelector.Applicant.AdditionalContact.Update);
    bool IsAssignApplicant = await PermissionChecker.IsGrantedAsync(GrantApplicationPermissions.Applicants.AssignApplicant);
    bool IsLookupEnabled = await PermissionChecker.IsGrantedAsync(UnitySelector.Applicant.Summary.Update);
}

<input type="hidden" id="ApplicantInfo_ApplicationId" value="@Model.ApplicationId" />
<input type="hidden" id="ApplicantInfo_ApplicationFormVersionId" value="@Model.ApplicationFormVersionId" />

<input type="hidden" id="ApplicantElectoralAddressType" value="@Model.ApplicantElectoralAddressType" />
<div id="orgApplicationSectorList" style="display: none;">@Html.Raw(Json.Serialize(Model.ApplicationSectors))</div>

<abp-row class="px-1 pb-2 mb-4 project-info-container">
    <div class="save-button-container">
        <abp-button text="Save" id="saveApplicantInfoBtn" class="floating-save-btn" icon-type="Other" icon="fl fl-save"
                    button-type="Primary" disabled="true" abp-if="@IsViewEditable" />
    </div>

    <form id="ApplicantInfoForm" autocomplete="off">
        <abp-input type="hidden" id="ApplicantInfoViewApplicantId" asp-for="@Model.ApplicantId" />

        @* Zone Section : Applicant Info Summary *@
        <zone-fieldset id="@UnitySelector.Applicant.Summary.Default" form-id="@Model.ApplicationFormId" show-legend="true"
                       update-permission-requirement="@UnitySelector.Applicant.Summary.Update">
            
            <abp-input asp-for="@Model.ApplicantSummary.ApplicantId" type="hidden" />

            <abp-row class="m-0 project-info-form">
                <abp-row class="m-0 p-0" abp-if="@IsLookupEnabled">
                    <abp-column size="_12" class="px-1 mb-4">
                        <label class="form-label">@L["ApplicantInfoView:ApplicantInfo.OrgBookSearch"].Value</label>
                        <select id="orgBookSelect" asp-for="@Model.SelectedOrgBookId"
                                class="auto-complete-select"
                                data-autocomplete-minimum-input-length="3"
                                data-autocomplete-api-url="/api/app/org-book/org-book-autocomplete-query"
                                data-autocomplete-display-property="value"
                                data-autocomplete-value-property="topic_source_id"
                                data-autocomplete-items-property="results"
                                data-autocomplete-filter-param-name="orgBookQuery"
                                data-autocomplete-placeholder="@L["ApplicantInfoView:ApplicantInfo.OrgBookSearchPlaceholder"].Value"
                                data-autocomplete-allow-clear="true">
                        </select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ApplicantSummary.OrgName" data-zone-include="true" disabled />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ApplicantSummary.OrgNumber" data-zone-include="true" disabled />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.OrgStatus" asp-items="@Model.OrgBookStatusList" data-zone-include="true" disabled>
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.OrganizationType" asp-items="@Model.OrganizationTypeList" data-zone-include="true" disabled>
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ApplicantSummary.NonRegOrgName" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input class="numeric-mask" asp-for="@Model.ApplicantSummary.OrganizationSize" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <div class="switch-container">
                            <div class="px-3 form-check unt-form-switch form-switch">
                                <abp-input type="checkbox" asp-for="@Model.ApplicantSummary.IndigenousOrgInd" />
                            </div>
                        </div>
                    </abp-column>
                </abp-row>
                <abp-row abp-if="@IsLookupEnabled">
                    <abp-column size="_12" class="px-1 mb-4">
                            <label class="form-label">@L["ApplicantInfoView:ApplicantInfo.ApplicantLookUp"].Value</label>
                            <select id="applicantLookupSelect" asp-for="@Model.SelectedApplicantLookUp"
                                    class="auto-complete-select"
                                    data-autocomplete-minimum-input-length="3"
                                    data-autocomplete-api-url="/api/app/applicant/applicant-look-up-autocomplete-query"
                                    data-autocomplete-display-property="ApplicantName"
                                    data-autocomplete-value-property="Id"
                                    data-autocomplete-items-property=""
                                    data-autocomplete-filter-param-name="applicantLookUpQuery"
                                    data-autocomplete-placeholder="@L["ApplicantInfoView:ApplicantInfo.ApplicantLookUpPlaceholder"].Value"
                                    data-autocomplete-allow-clear="true"
                                    disabled="@(!IsAssignApplicant)">
                            </select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <div class="input-group unt-input-group">
                            <abp-input asp-for="@Model.ApplicantSummary.UnityApplicantId" maxlength="6" class="unt-input" />
                            <div class="unt-input-group-append">
                                <button class="btn unt-btn-link btn-link" id="btn-generate" type="button" onclick="generateUnityApplicantIdBtn()"><i class="unt-icon-m fa-solid fa-arrows-rotate"></i></button>
                            </div>
                        </div>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.FiscalDay" asp-items="@Model.FiscalDayList">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.FiscalMonth" asp-items="@Model.FiscalMonthList">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.Sector" asp-items="@Model.ApplicationSectorsList">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-select asp-for="@Model.ApplicantSummary.SubSector" asp-items="@Model.ApplicationSubSectorsList">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <div class="switch-container">
                            <div class="px-3 form-check unt-form-switch form-switch">
                                <abp-input type="checkbox" asp-for="@Model.ApplicantSummary.RedStop" disabled />
                            </div>
                        </div>
                    </abp-column>
                    <abp-row class="m-0 p-0">
                        <abp-column size="_12" class="px-1">
                            <abp-input asp-for="@Model.ApplicantSummary.SectorSubSectorIndustryDesc" />
                        </abp-column>
                    </abp-row>
                </abp-row>
            </abp-row>
        </zone-fieldset>


        @* Zone Section : Contact Info *@
        <zone-fieldset id="@UnitySelector.Applicant.Contact.Default" form-id="@Model.ApplicationFormId" show-legend="true"
                       update-permission-requirement="@UnitySelector.Applicant.Contact.Update">
            <abp-row class="m-0 project-info-location">
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Name" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Title" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Email" />
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Phone"
                                   pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.ContactInfo.Phone2"
                                   pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" />
                    </abp-column>
                </abp-row>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Signing Authority *@
        <zone-fieldset id="@UnitySelector.Applicant.Authority.Default" form-id="@Model.ApplicationFormId" show-legend="true"
                       update-permission-requirement="@UnitySelector.Applicant.Authority.Update">
            <abp-row class="m-0 signin-authority-form">
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityFullName" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityTitle" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityEmail" />
                    </abp-column>
                </abp-row>
                <abp-row class="m-0 p-0">
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityBusinessPhone" />
                    </abp-column>
                    <abp-column size="_4" class="px-1">
                        <abp-input asp-for="@Model.SigningAuthority.SigningAuthorityCellPhone" />
                    </abp-column>
                </abp-row>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Address *@
        <zone-fieldset id="@UnitySelector.Applicant.Location.Default" form-id="@Model.ApplicationFormId" show-legend="true"
                       update-permission-requirement="@UnitySelector.Applicant.Location.Update">
            <abp-row class="m-0 contact-info-form">
                <div class="d-flex">
                    <abp-row class="m-0 physical-address-form pe-2" style="border-bottom:none;">
                        <abp-row class="m-0 p-0">
                            <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 ps-0 mt-3">
                                <div class="d-flex align-items-stretch justify-content-start">
                                    <h6 class="ps-1 fw-bold">@L["ApplicantInfoView:PhysicalAddress"].Value</h6>
                                </div>
                            </abp-column>
                        </abp-row>
                        <abp-row class="m-0 p-0 physical-address-fields-group">
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Street" />
                            </abp-column>
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Street2" />
                            </abp-column>
                            <abp-column size="_2" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Unit" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.City" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.Province" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.PhysicalAddress.PostalCode" />
                            </abp-column>
                        </abp-row>
                    </abp-row>
                    <abp-row class="m-0 mailing-address-form ps-2" style="border-bottom:none;">
                        <abp-row class="m-0 p-0">
                            <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 ps-0 mt-3">
                                <div class="d-flex align-items-stretch justify-content-start">
                                    <h6 class="ps-1 fw-bold">@L["ApplicantInfoView:MailingAddress"].Value</h6>
                                </div>
                            </abp-column>
                        </abp-row>
                        <abp-row class="m-0 p-0 mailing-address-fields-group">
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Street" />
                            </abp-column>
                            <abp-column size="_5" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Street2" />
                            </abp-column>
                            <abp-column size="_2" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Unit" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.City" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.Province" />
                            </abp-column>
                            <abp-column size="_4" class="px-1">
                                <abp-input asp-for="@Model.MailingAddress.PostalCode" />
                            </abp-column>
                        </abp-row>
                    </abp-row>
                </div>
            </abp-row>

            <abp-row class="m-0 contact-info-form">
                <abp-row class="m-0 p-0">
                    <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 project-location">
                        <div id="ApplicantElectoralDistrictTitleRegion"
                             class="d-flex align-items-stretch justify-content-start">
                            <h6 class="ps-1 fw-bold mb-0">@L["ApplicantInfoView:ElectoralDistrict"].Value</h6>
                            <button class="btn btn-link p-0 ms-2"
                                    id="btn-toggle-lock-electoral"
                                    type="button"
                                    onclick="toggleElectoralDistrictLockState()"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="top"
                                    data-bs-title="Toggle Electoral District Edit"
                                    style="margin-top: -0.5rem;">
                                <i class="unt-icon-sm fa-solid fa-lock"></i>
                            </button>
                        </div>
                    </abp-column>
                </abp-row>
                <abp-column size="_6" class="px-3">
                    <abp-row>
                        <abp-column size="_10" class="px-1">
                            <abp-select asp-for="@Model.ElectoralDistrict" asp-items="@Model.ElectoralDistrictList">
                                <option value="">Please choose...</option>
                            </abp-select>
                        </abp-column>
                        <abp-column size="_2" class="px-1 aligned-select-btn">
                            <button class="btn unt-btn-outline-primary btn-outline-primary" id="btn-refresh-electoral" type="button" onclick="refreshApplicantElectoralDistrict()">
                                <i class="unt-icon-sm fa-solid fa-refresh"></i>
                            </button>
                        </abp-column>
                    </abp-row>
                </abp-column>
                <div class="fs-6 mb-2"><b>NOTE: </b>@L["ApplicantInfoView:Notes.ElectoralDistrict", Model.ApplicantElectoralAddressTypeDisplay].Value</div>
            </abp-row>
        </zone-fieldset>

        @* Zone Section : Worksheet *@
        <zone id="Unity_GrantManager_ApplicationManagement_Applicant_Worksheet"
            zone-requirement="@UnitySelector.Applicant.Default"
            permission-requirement="@UnitySelector.Applicant.Default"
            update-permission-requirement="@UnitySelector.Applicant.Default"
            feature-requirement="Unity.Flex" form-id="@Model.ApplicationFormId" show-legend="false">
            @await Component.InvokeAsync(typeof(WorksheetInstanceWidget),
            new
            {
                instanceCorrelationId = Model.ApplicationId,
                instanceCorrelationProvider = CorrelationConsts.Application,
                sheetCorrelationId = Model.ApplicationFormVersionId,
                sheetCorrelationProvider = CorrelationConsts.FormVersion,
                uiAnchor = FlexConsts.ApplicantInfoUiAnchor
            })
        </zone>
    </form>
</abp-row>

@* Zone Section : AdditionalContact *@
<zone id="@UnitySelector.Applicant.AdditionalContact.Default"
      permission-requirement="@UnitySelector.Applicant.AdditionalContact.Default"
      form-id="@Model.ApplicationFormId" show-legend="false"
      editable-if="IsAdditionalContactEditable">
    <abp-row class="px-1 pb-2 mb-4 summary-container">
        <h6 class="ps-2 mb-3 fw-bold">@L["Summary:ContactsTitle"].Value</h6>
        <div id="applicationContactsWidget">
            @await Component.InvokeAsync("ApplicationContactsWidget", new { applicationId = Model.ApplicationId, isReadOnly = !IsAdditionalContactEditable })
        </div>

        @if (IsAdditionalContactAddable)
        {
            <div class="d-flex justify-content-end">
                <abp-button text="Add Contact" id="AddContactButton" class="add_contact_btn" icon-type="Other" icon="fl fl-plus"
                            button-type="Light" />
            </div>
        }
    </abp-row>
</zone>


