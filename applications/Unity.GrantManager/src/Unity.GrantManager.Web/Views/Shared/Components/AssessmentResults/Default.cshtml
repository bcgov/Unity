@using Microsoft.AspNetCore.Authorization;
@using Unity.GrantManager.Localization
@using Microsoft.Extensions.Localization
@using Unity.GrantManager.Permissions;
@using Unity.GrantManager.Web.Views.Shared.Components.AssessmentResults;

@inject IAuthorizationService AuthorizationService
@inject IStringLocalizer<GrantManagerResource> L
@model AssessmentResultsPageModel

<input type="hidden" id="AssessmentResultViewApplicationId" value="@Model.ApplicationId" />

<abp-row class="px-1 pb-2 mb-4 assessment-results-container">
    <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2">
        <div id="AssessementResultsTitleRegion" class="d-flex align-items-stretch justify-content-start">
            <h6 class="ps-1 fw-bold">@L["AssessmentResultsView:AssessmentResultsTitle"].Value</h6>
        </div>
    </abp-column>
    <form id="assessmentResultForm">
        <abp-row class="m-0 assessment-result-form">
            <abp-column size="_10" class="px-0">
                <abp-column size="_12" class="px-1">
                    <div class="unity-input-group">
                        <abp-input asp-for="@Model.AssessmentResults.ProjectSummary"
                                   onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)" />
                    </div>
                </abp-column>
                <abp-row class="m-0">
                    <abp-column size="_3" class="px-1">
                        <div class="unity-input-group">
                            <span class="unity-input-prepend">$</span>
                            <abp-input asp-for="@Model.AssessmentResults.RequestedAmount"
                                       onchange="enableResultSaveBtn(this)" class="unity-currency-input" disabled="@(!Model.IsEditGranted)" />
                        </div>
                    </abp-column>
                    <abp-column size="_3" class="px-1">
                        <div class="unity-input-group">
                            <span class="unity-input-prepend">$</span>
                            <abp-input asp-for="@Model.AssessmentResults.TotalProjectBudget"
                                       onchange="enableResultSaveBtn(this)" class="unity-currency-input" disabled="@(!Model.IsEditGranted)" />
                        </div>
                    </abp-column>
                    <abp-column size="_3" class="px-1">
                        <div class="unity-input-group">
                            <span class="unity-input-prepend">$</span>
                            <abp-input asp-for="@Model.AssessmentResults.RecommendedAmount"
                                       onchange="enableResultSaveBtn(this)" class="unity-currency-input" disabled="@(!Model.IsEditGranted)" />
                        </div>
                    </abp-column>
                    <abp-column size="_3" class="px-1">
                        <div class="unity-input-group">
                            <span class="unity-input-prepend">$</span>
                            <abp-input asp-for="@Model.AssessmentResults.ApprovedAmount"
                                       onchange="enableResultSaveBtn(this)" class="unity-currency-input" id="approvedAmountInput" disabled="@(!Model.IsEditGranted && !Model.IsEditApprovedAmount)" />
                        </div>
                    </abp-column>
                </abp-row>
                <abp-row class="m-0">
                    <abp-column size="_3" class="px-1">
                        <abp-select asp-for="@Model.AssessmentResults.LikelihoodOfFunding" asp-items="@Model.FundingRiskList"
                                    onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_3" class="px-1">
                        <abp-select asp-for="@Model.AssessmentResults.DueDilligenceStatus" asp-items="@Model.DueDilligenceList"
                                    onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_3" class="px-1">
                        <abp-select asp-for="@Model.AssessmentResults.Recommendation" asp-items="@Model.RecommendationActionList"
                                    onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                    <abp-column size="_3" class="px-1">
                        <abp-select asp-for="@Model.AssessmentResults.DeclineRational" asp-items="@Model.DeclineRationalActionList"
                                    onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)">
                            <option value="">Please choose...</option>
                        </abp-select>
                    </abp-column>
                </abp-row>
                <abp-column size="_12" class="px-1">
                    <abp-input asp-for="@Model.AssessmentResults.Notes"
                               onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)" />
                </abp-column>
            </abp-column>
            <abp-column size="_2" class="px-0">
                <abp-column size="_12" class="px-1">
                    <abp-input type="number" asp-for="@Model.AssessmentResults.TotalScore"
                               onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)" min="0" max="2147483647" />
                </abp-column>
                <abp-column size="_12" class="px-1">
                    <abp-select asp-for="@Model.AssessmentResults.AssessmentResultStatus" asp-items="@Model.AssessmentResultStatusList"
                                onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
                <abp-column size="_12" class="px-1">
                    <abp-input type="date" asp-for="@Model.AssessmentResults.FinalDecisionDate" onchange="enableResultSaveBtn(this)" disabled="@(!Model.IsEditGranted)" abp-data-datepicker="false">
                    </abp-input>
                </abp-column>
                <abp-column size="_12" class="px-1 d-flex justify-content-end">
                    <abp-button text="Save"
                                id="saveAssessmentResultBtn"
                                class="save_assessment_btn"
                                icon-type="Other"
                                icon="fl fl-save"
                                button-type="Light"
                                disabled="true" />
                </abp-column>
            </abp-column>
        </abp-row>
    </form>
</abp-row>


<script defer>
    (function () {
        if (window.jQuery) {
            $('.unity-currency-input').maskMoney();
        }
    })();
</script>
