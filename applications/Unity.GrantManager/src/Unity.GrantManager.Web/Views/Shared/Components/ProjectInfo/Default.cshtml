@using Microsoft.AspNetCore.Authorization;
@using Unity.GrantManager.Localization
@using Microsoft.Extensions.Localization
@using Unity.GrantManager.Permissions;
@using Unity.GrantManager.Web.Views.Shared.Components.ProjectInfo;

@inject IAuthorizationService AuthorizationService
@inject IStringLocalizer<GrantManagerResource> L
@model ProjectInfoViewModel
@{
    Layout = null;
}

<input type="hidden" id="ProjectInfoViewApplicationId" value="@Model.ApplicationId" />


<div id="applicationSectorList" style="display: none;">@Html.Raw(Json.Serialize(Model.ApplicationSectors))</div>
<div id="allEconomicRegionList" style="display: none;">@Html.Raw(Json.Serialize(Model.EconomicRegions))</div>
<div id="allRegionalDistrictList" style="display: none;">@Html.Raw(Json.Serialize(Model.RegionalDistricts))</div>
<div id="allCensusSubdivisionList" style="display: none;">@Html.Raw(Json.Serialize(Model.CensusSubdivisions))</div>

<abp-row class="px-1 pb-2 mb-4 project-info-container">
    <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2">
        <div id="ProjectInfoTitleRegion" class="d-flex align-items-stretch justify-content-start">
            <h6 class="ps-1 fw-bold">@L["ProjectInfoView:ProjectInfoTitle"].Value</h6>
        </div>
    </abp-column>
    <form id="projectInfoForm">
        <abp-row class="m-0 project-info-form">
            <abp-row class="m-0 p-0">
                <abp-column size="_6" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ProjectName" onchange="enableSaveBtn(this)" />
                </abp-column>
                <abp-column size="_3" class="px-1">
                    <abp-input type="date" id="startDate" asp-for="@Model.ProjectInfo.ProjectStartDate" onchange="enableSaveBtn(this)" abp-data-datepicker="false" />
                </abp-column>
                <abp-column size="_3" class="px-1">
                    <abp-input type="date" asp-for="@Model.ProjectInfo.ProjectEndDate" onchange="enableSaveBtn(this)" 
                        minDate="@Model.ProjectInfo.ProjectStartDate" abp-data-datepicker="false" />
                </abp-column>
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_12" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ProjectSummary" onchange="enableSaveBtn(this)" />
                </abp-column>
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_4" class="px-1">
                    <div class="unity-input-group">
                        <span class="unity-input-prepend">$</span>
                        <abp-input asp-for="@Model.ProjectInfo.RequestedAmount" class="unity-currency-input" onchange="enableSaveBtn(this)" />
                    </div>
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <div class="unity-input-group">
                        <span class="unity-input-prepend">$</span>
                        <abp-input asp-for="@Model.ProjectInfo.TotalProjectBudget" class="unity-currency-input" onchange="enableSaveBtn(this)" />
                    </div>
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.PercentageTotalProjectBudget" onchange="enableSaveBtn(this)" />
                </abp-column>

               
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_4" class="px-1">
                    <div class="unity-input-group">
                        <span class="unity-input-prepend">$</span>
                        <abp-input asp-for="@Model.ProjectInfo.ProjectFundingTotal" class="unity-currency-input" onchange="enableSaveBtn(this)" />
                    </div>
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.Sector" asp-items="@Model.ApplicationSectorsList" id="sectorDropdown"
                                onchange="enableSaveBtn(this)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.SubSector" asp-items="@Model.ApplicationSubSectorsList" id="subSectorDropdown"
                                onchange="enableSaveBtn(this)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
               
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.Acquisition" asp-items="@Model.AcquisitionList"
                                onchange="enableSaveBtn(this)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.Forestry" asp-items="@Model.ForestryList"
                                onchange="enableSaveBtn(this)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.ForestryFocus" asp-items="@Model.ForestryFocusList"
                                onchange="enableSaveBtn(this)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
            </abp-row>
           
        </abp-row>
        
        <abp-row class="m-0 p-0">
            <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 project-location">
                <div id="ProjectInfoTitleRegion" class="d-flex align-items-stretch justify-content-start">
                    <h6 class="ps-1 fw-bold">@L["ProjectInfoView:ProjectInfoLocation"].Value</h6>
                </div>
            </abp-column>
        </abp-row>
        <abp-row class="m-0 project-info-location">
          
            <abp-row class="m-0 p-0">
                <abp-column size="_4" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.Community" onchange="enableSaveBtn(this)" />
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.CommunityPopulation" onchange="enableSaveBtn(this)" />
                </abp-column>
                <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.ElectoralDistrict" asp-items="@Model.ElectoralDistrictList"
                                onchange="enableSaveBtn(this)">
                        <option value="">Please choose...</option>
                    </abp-select>
                </abp-column>
            </abp-row> 
            <abp-row class="m-0 p-0">
               
            <abp-column size="_4" class="px-1">
                <abp-select asp-for="@Model.ProjectInfo.EconomicRegion" asp-items="@Model.EconomicRegionList" id="economicRegions"
                            onchange="enableSaveBtn(this)">
                    <option value="">Please choose...</option>
                </abp-select>
            </abp-column>
            <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.RegionalDistrict" asp-items="@Model.RegionalDistrictList" id="regionalDistricts"
                            onchange="enableSaveBtn(this)">
                    <option value="">Please choose...</option>
                </abp-select>
            </abp-column>
            <abp-column size="_4" class="px-1">
                    <abp-select asp-for="@Model.ProjectInfo.CensusSubdivision" asp-items="@Model.CensusSubdivisionList" id="censusSubdivisions"
                            onchange="enableSaveBtn(this)">
                    <option value="">Please choose...</option>
                </abp-select>
            </abp-column>
            
           
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_12" class="d-inline-flex justify-content-between pb-3 pt-2 project-location">
                    <div id="ContactInfoTitleRegion" class="d-flex align-items-stretch justify-content-start">
                        <h6 class="ps-1 fw-bold">@L["ProjectInfoView:ProjectInfoContactInfo"].Value</h6>
                    </div>
                </abp-column>
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_6" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ContactFullName" onchange="enableSaveBtn(this)" />
                </abp-column>
                <abp-column size="_6" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ContactTitle" onchange="enableSaveBtn(this)" />
                </abp-column>
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_6" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ContactEmail" onchange="enableSaveBtn(this)" />
                </abp-column>
                <abp-column size="_6" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ContactBusinessPhone" pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" onchange="enableSaveBtn(this)" />
                </abp-column>
            </abp-row>
            <abp-row class="m-0 p-0">
                <abp-column size="_6" class="px-1">
                    <abp-input asp-for="@Model.ProjectInfo.ContactCellPhone" pattern="^(\+\s?)?((?<!\+.*)\(\+?\d+([\s\-\.]?\d+)?\)|\d+)([\s\-\.]?(\(\d+([\s\-\.]?\d+)?\)|\d+))*(\s?(x|ext\.?)\s?\d+)?$" onchange="enableSaveBtn(this)" />
                </abp-column>
                <abp-column size="_6" class="px-1">
                </abp-column>
            </abp-row>
            <abp-row class="m-0 p-0">
                
                <abp-column size="_12" class="px-1 d-flex justify-content-end mt-2">
                    <abp-button text="Save" id="saveProjectInfoBtn" class="save-project-btn" icon-type="Other"
                                icon="fl fl-save" button-type="Light" disabled="true" />
                </abp-column>
            </abp-row>
         </abp-row>
    </form>
</abp-row>


<script defer>
    (function () {
        if (window.jQuery) {
            $('.unity-currency-input').maskMoney();
        }
    })();
</script>
