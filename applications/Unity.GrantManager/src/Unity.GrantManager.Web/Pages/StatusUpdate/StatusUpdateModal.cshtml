@page
@model Unity.GrantManager.Web.Pages.StatusUpdate.StatusUpdateModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}
<form method="post" asp-page-handler="OnPostAsync">
    <abp-modal>
        <abp-modal-header title="Application Status"></abp-modal-header>
        <abp-modal-body>

            <abp-select asp-for="@Model.StatusId" asp-items="@Model.StatusList" label="Status">
                <option value="">Choose a status</option>
            </abp-select>
            <abp-input type="hidden" asp-for="@Model.SelectedApplicationIds" />
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn btn-primary" data-busy-text="Saving..." type="submit">Save</button>
            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
        </abp-modal-footer>
    </abp-modal>
</form>
