@page
@model Unity.GrantManager.Web.Pages.Attachments.UpdateAttachmentModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}

<abp-dynamic-form abp-model="@Model.UpdateModel" required-symbols="true">
    <abp-modal id="updateAttachmentModal" size="Large">
        <abp-modal-header>Edit @Model.UpdateModel.AttachmentType.ToString() Document Label</abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn btn-primary" data-busy-text="Saving..." type="submit">Save</button>
            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Reset</button>
            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
        </abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>