@page
@model Unity.GrantManager.Web.Pages.Attachments.DeleteAttachmentModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}


<form method="post" asp-page-handler="OnPostAsync">
    <abp-modal id="deleteAttachmentModal">
        <abp-modal-header title="You are about to delete"></abp-modal-header>
        <abp-modal-body>             
            @Model.FileName
            <abp-input type="hidden" asp-for="@Model.S3ObjectKey" />
            <abp-input type="hidden" asp-for="@Model.FileName" />
            <abp-input type="hidden" asp-for="@Model.AttachmentType" />
            <abp-input type="hidden" asp-for="@Model.AttachmentTypeId" />
        </abp-modal-body>
        <abp-modal-footer> 
            <button class="btn btn-primary" data-busy-text="Saving..." type="submit">Delete</button>
            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>            
        </abp-modal-footer>
        
    </abp-modal>
</form>
