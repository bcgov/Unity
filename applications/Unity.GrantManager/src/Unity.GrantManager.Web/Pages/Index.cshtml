@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Unity.GrantManager.Localization
@using Volo.Abp.Users
@model Unity.GrantManager.Web.Pages.IndexModel
@inject IHtmlLocalizer<GrantManagerResource> L
@inject ICurrentUser CurrentUser
@section styles {
<abp-style src="/Pages/Index.css" />
}
@section scripts {
<abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>Unity Portal</strong> is successfully running!</h5>
        </div>
        <h1>@L["LongWelcomeMessage"]</h1>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }
    </div>
</div>
