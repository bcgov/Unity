@page
@model Unity.GrantManager.Web.Pages.ApplicationLinks.ApplicationLinksModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}

<form method="post" asp-page-handler="OnPostAsync" data-check-form-on-close="false" id="applicationLinksForm" asp-page="/ApplicationLinks/ApplicationLinksModal">
<abp-modal id="applicationLinksModal">
    <abp-modal-header title="Linked Records"></abp-modal-header>
    <abp-modal-body>
        <div>
                <abp-input type="text" id="SelectedApplications" asp-for="@Model.SelectedApplications" />
                <abp-input type="hidden" id="Tags" asp-for="@Model.Tags" />
                <abp-input type="hidden" id="AllApplications" asp-for="@Model.AllApplications" />
              
        </div>       
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
        <button class="btn btn-primary" data-busy-text="Saving..." type="submit" id="applicationLinksModelSaveBtn" ><i class="fa fa-check"></i> <span>Save</span></button>
    </abp-modal-footer>
</abp-modal>
</form>
