@page
@model Unity.GrantManager.Web.Pages.AssigneeSelection.AssigneeSelectionModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}

<form method="post" asp-page-handler="OnPostAsync">
<abp-modal>
    <abp-modal-header title="Assessment Users"></abp-modal-header>
    <abp-modal-body>
        <div>
            <abp-select  asp-for="@Model.AssigneeId" asp-items="@Model.AssigneeList" label="Owner">
                <option value="">Select a user</option>
            </abp-select>
            <abp-input type="text" id="SelectedAssignees" asp-for="@Model.SelectedAssignees" />
                <abp-input type="hidden" asp-for="@Model.AssigneeList" />
            <abp-input type="hidden" asp-for="@Model.SelectedApplicationIds" />
            <abp-input type="hidden" asp-for="@Model.AllAssignees" />
            <abp-input type="hidden" asp-for="@Model.CommonAssigneeList" />
            <abp-input type="hidden" asp-for="@Model.UnCommonAssigneeList" />
            <abp-input type="hidden" asp-for="@Model.CurrentAssigneeList" />
            <abp-input type="hidden" id="ActionType" asp-for="@Model.ActionType" />
        </div>       
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn btn-primary" data-busy-text="Saving..." type="submit">Save</button>
        <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
    </abp-modal-footer>
</abp-modal>
</form>
