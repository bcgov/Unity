@page
@using Unity.GrantManager.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Unity.GrantManager.Web.Pages.GrantPrograms
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<GrantManagerResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.MenuItemName = "GrantManager.GrantPrograms";
    PageLayout.Content.Title = L["Grants"].Value;
}
@section scripts
    {
    <abp-script src="/Pages/GrantPrograms/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size="_6">
                <abp-card-title>@L["GrantPrograms"]</abp-card-title>
            </abp-column>
            <abp-column size="_6" class="text-end">
                <abp-button id="CreateGrantProgramButton"
                            text="@L["GrantProgram_Create"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="GrantProgramsTable"></abp-table>
    </abp-card-body>
</abp-card>
