@page
@using Unity.GrantManager.Localization
@using Unity.GrantManager.Web.Pages.GrantPrograms
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model Unity.GrantManager.Web.Pages.GrantPrograms.CreateModalModel

@inject IStringLocalizer<GrantManagerResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="GrantProgram" asp-page="/GrantPrograms/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["GrantProgram_Create"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Save|AbpModalButtons.Cancel)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
