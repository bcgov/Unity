@using Unity.Flex.Web.Views.Shared.Components.QuestionYesNoWidget;

@model QuestionYesNoViewModel;

<div class="mb-3">
    <label for="answer-yesno-@Model.QuestionId" class="form-label unt-form-label">Answer</label>
    <select id="answer-yesno-@Model.QuestionId"
            class="form-select form-control answer-yesno-input @(!Model.IsHumanConfirmed ? "ai-generated-answer" : "human-confirmed-answer")"
            name="Answer-YesNo-@Model.QuestionId"
            data-original-value="@Model.Answer"
            data-yes-numeric-value="@Model.YesValue"
            data-no-numeric-value="@Model.NoValue"
            data-is-human-confirmed="@Model.IsHumanConfirmed.ToString().ToLower()"
            disabled="@Model.IsDisabled"
            onchange="handleInputChange('@Model.QuestionId','answer-yesno-'); markAsHumanConfirmed(this)">
        <option value="">Please choose...</option>
        <!option value="Yes" @(Model.Answer == "Yes" ? "selected" : "")>Yes</!option>
        <!option value="No" @(Model.Answer == "No" ? "selected" : "")>No</!option>
    </select>
    @if (!Model.IsHumanConfirmed && !string.IsNullOrEmpty(Model.Answer))
    {
        <div class="ai-answer-indicator">
            🤖 AI-generated answer
            @if (Model.AIConfidence.HasValue)
            {
                <span class="ai-confidence-score"> (Confidence: @Model.AIConfidence%)</span>
            }
        </div>
        @if (!string.IsNullOrEmpty(Model.AICitation))
        {
            <div class="ai-citation">
                <small><strong>AI Reasoning:</strong> @Model.AICitation</small>
            </div>
        }
    }
</div>