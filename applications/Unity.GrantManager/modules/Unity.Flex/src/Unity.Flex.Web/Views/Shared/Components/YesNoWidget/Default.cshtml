@using Unity.Flex.Web.Views.Shared.Components.YesNoWidget;
@using Unity.Flex.Web.Views.Shared.Components;
@using Unity.Flex;

@model YesNoViewModel;

@if (Model.Field != null)
{
    @{
        var fieldId = Model.WorksheetId.HasValue
            ? $"{Model.Field.Name}.{Model.Name}.{Model.Field.Id}.{Model.WorksheetId}"
            : $"{Model.Field.Name}.{Model.Name}.{Model.Field.Id}";
    }
    <select class="@Model.Field.Type.ApplyCssClass()"
            id="@fieldId"
            name="@fieldId"
            onchange="@($"notifyFieldChange('{Model.Name}', '{Model.Field?.UiAnchor}', this)")">
        <option selected="@Model.Field?.CurrentValue?.CompareYesNoSelectListValue("Please choose...")">Please choose...</option>
        <option selected="@Model.Field?.CurrentValue?.CompareYesNoSelectListValue("Yes")">Yes</option>
        <option selected="@Model.Field?.CurrentValue?.CompareYesNoSelectListValue("No")">No</option>
    </select>
}