<Project Sdk="Microsoft.NET.Sdk.Web">

  <Import Project="..\..\common.props" />

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <AssetTargetFallback>$(AssetTargetFallback);portable-net45+win8+wp8+wpa81;</AssetTargetFallback>
    <IsPackable>true</IsPackable>
    <OutputType>Library</OutputType>
    <RootNamespace>Unity.Flex.Web</RootNamespace>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.AutoMapper" Version="8.1.0" />
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI.Theme.Shared" Version="8.1.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="8.0.3" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Pages\**\*.css" />
    <EmbeddedResource Include="Pages\**\*.js" />
    <EmbeddedResource Include="Components\**\*.js" />
    <EmbeddedResource Include="Components\**\*.css" />
    <EmbeddedResource Include="wwwroot\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Views\Shared\Components\Scoresheet\Scoresheet.css" />
    <None Remove="Views\Shared\Components\Scoresheet\Scoresheet.js" />
    <None Remove="Views\Shared\Components\WorksheetInstanceWidget\Default.css" />
    <None Remove="Views\Shared\Components\WorksheetInstanceWidget\Default.js" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Views\Shared\Components\Scoresheet\Scoresheet.css" />
    <EmbeddedResource Include="Views\Shared\Components\Scoresheet\Scoresheet.js" />
    <EmbeddedResource Include="Views\Shared\Components\WorksheetInstanceWidget\Default.css" />
    <EmbeddedResource Include="Views\Shared\Components\WorksheetInstanceWidget\Default.js" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Unity.Flex.Application.Contracts\Unity.Flex.Application.Contracts.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Views\Shared\Components\CustomTabWidget\Default.css">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Views\Shared\Components\CustomTabWidget\Default.js">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
