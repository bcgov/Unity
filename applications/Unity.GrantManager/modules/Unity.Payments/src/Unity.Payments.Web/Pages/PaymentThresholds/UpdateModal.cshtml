@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model Unity.GrantManager.Web.Pages.PaymentThresholds.UpdateModalModel

@{
    Layout = null;
}

<abp-dynamic-form abp-model="PaymentThreshold" asp-page="/PaymentThresholds/UpdateModal">
    <abp-modal>
        <abp-modal-header title="Payment Threshold"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
            <abp-input hidden="true" asp-for="Id" suppress-label="true"/>
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn btn-primary" data-busy-text="Saving..." type="submit">Save</button>
            <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
        </abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
