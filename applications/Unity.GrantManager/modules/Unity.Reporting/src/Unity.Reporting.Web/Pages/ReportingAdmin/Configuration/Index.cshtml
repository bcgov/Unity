@page
@model Unity.Reporting.Web.Pages.ReportingAdmin.IndexModel
@{
    ViewData["Title"] = "Reporting Configuration";
}

@section styles
{
    <abp-style src="/Pages/ReportingAdmin/Configuration/Index.css" />
}
@section scripts
{
    <abp-script src="/Pages/ReportingAdmin/Configuration/Index.js" />
}

<div class="container-fluid px-0">
    <div class="unity-page-titlebar">
        <h4 class="m-0">Reporting Configuration</h4>
    </div>
    <div class="p-3">
        <!-- Tenant-Specific View Role Management -->
        <div class="reporting-configuration-section">
            <h5>Tenant View Role Management</h5>
            <p class="text-muted">Configure tenant-specific database roles for reporting views. Each tenant can have a custom role, or will default to {tenantname}_readonly if not specified.</p>
            
            <div class="table-responsive">
                <table id="TenantViewRoleTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tenant Name</th>
                            <th>View Role</th>
                            <th>Assignment Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tenantRole in Model.TenantViewRoles)
                        {
                            <tr data-tenant-id="@tenantRole.TenantId">
                                <td>@tenantRole.TenantName</td>
                                <td class="view-role-cell">
                                    <input type="text" 
                                           class="form-control view-role-input" 
                                           value="@tenantRole.ViewRole" 
                                           data-tenant-id="@tenantRole.TenantId"
                                           placeholder="@($"{tenantRole.TenantName.ToLowerInvariant()}_readonly")" />
                                </td>
                                <td class="assignment-status-cell">
                                    @if (tenantRole.IsAssigned)
                                    {
                                        <span class="badge bg-success">Assigned</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td class="action-buttons-cell">
                                    <div class="d-flex gap-2">
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-primary save-role-btn"
                                                data-tenant-id="@tenantRole.TenantId"
                                                title="Save Role">
                                            <i class="fa fa-save"></i> Save
                                        </button>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-secondary assign-role-btn"
                                                data-tenant-id="@tenantRole.TenantId"
                                                data-tenant-name="@tenantRole.TenantName"
                                                title="Assign Role to All Views">
                                            <i class="fa fa-cogs"></i> Assign to Views
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.TenantViewRoles.Any())
            {
                <div class="text-center py-4">
                    <p class="text-muted">No tenants found.</p>
                </div>
            }
        </div>
    </div>
</div>

